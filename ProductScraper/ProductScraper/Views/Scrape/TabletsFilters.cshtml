@using ProductScraper.Views.Models
@model TabletViewModel
<form method="post" asp-action="ApplyFilters" asp-controller="Scrape" id="filterForm">

    @if (Model.Filters.Brend != null)
    {
        <div class="filter-group">
            <h4>Proizvođač</h4>
            @foreach (var item in Model.Filters.Brend)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="Brend" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.Filters.DijagonalaEkrana != null)
    {
        <div class="filter-group">
            <h4>Dijagonala ekrana</h4>
            @foreach (var item in Model.Filters.DijagonalaEkrana)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="DijagonalaEkrana" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.Filters.InternaMemorija != null)
    {
        <div class="filter-group">
            <h4>Interna memorija</h4>
            @foreach (var item in Model.Filters.InternaMemorija)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="InternaMemorija" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.Filters.RezolucijaEkrana != null)
    {
        <div class="filter-group">
            <h4>Rezolucija ekrana</h4>
            @foreach (var item in Model.Filters.RezolucijaEkrana)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="RezolucijaEkrana" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.Filters.RAMMemorija != null)
    {
        <div class="filter-group">
            <h4>Ram memorija</h4>
            @foreach (var item in Model.Filters.RAMMemorija)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="RaMMemorija" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    <div class="filter-group">
        <h4>Cena (RSD)</h4>

        <div class="filter-item" style="margin-bottom: 10px;">
            <label for="minCena">Min cena</label>
            <input type="number" id="minCena" name="MinCena" class="form-control"
                   placeholder="npr. 30000" min="0" />
        </div>

        <div class="filter-item">
            <label for="maxCena">Max cena</label>
            <input type="number" id="maxCena" name="MaxCena" class="form-control"
                   placeholder="npr. 120000" min="0" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Apply</button>
</form>
<div class="results-container" id="productsContainer">
    @Html.Partial("~/Views/Scrape/ProductsList.cshtml", Model.Products)
</div>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#filterForm').on('submit', function (e) {
            e.preventDefault();

            var form = $(this);
            var data = form.serialize();

            $.ajax({
                type: "POST",
                url: '@Url.Action("ScrapeTablets", "Tablets")',
                data: data,
                success: function (result) {
                    $('#productsContainer').html(result);
                },
                error: function (xhr, status, error) {
                    console.error("Greška pri učitavanju proizvoda:", error);
                }
            });
        });
    });
</script>
<style>
    .filters {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        max-width: 1000px;
    }

    .filter-group {
        flex: 1 1 250px;
        background: #f7f8fa;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 6px;
    }

        .filter-group h4 {
            margin-bottom: 10px;
            font-size: 16px;
            font-weight: bold;
        }

    .filter-item {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

        .filter-item input[type="checkbox"] {
            margin-right: 8px;
            accent-color: #0078d4;
            width: 16px;
            height: 16px;
        }

        .filter-item label {
            cursor: pointer;
            font-size: 14px;
        }
</style>
