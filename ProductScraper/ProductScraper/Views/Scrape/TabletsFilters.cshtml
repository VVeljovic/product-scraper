@using ProductScraper.Views.Models
@model TabletViewModel

<div class="page-layout">
    <aside class="filters-sidebar">
        <form id="filterForm" method="post" action="@Url.Action("ApplyFilters", "Tablets")">
            @if (Model.Filters.Brend != null)
            {
                <div class="filter-group">
                    <h4>Proizvođač</h4>
                    @foreach (var item in Model.Filters.Brend)
                    {
                        <div class="filter-item">
                            <input type="checkbox" id="brend_@item" name="Brend" value="@item" />
                            <label for="brend_@item">@item</label>
                        </div>
                    }
                </div>
            }

            @if (Model.Filters.DijagonalaEkrana != null)
            {
                <div class="filter-group">
                    <h4>Dijagonala ekrana</h4>
                    @foreach (var item in Model.Filters.DijagonalaEkrana)
                    {
                        <div class="filter-item">
                            <input type="checkbox" id="screen_@item" name="DijagonalaEkrana" value="@item" />
                            <label for="screen_@item">@item</label>
                        </div>
                    }
                </div>
            }

            @if (Model.Filters.InternaMemorija != null)
            {
                <div class="filter-group">
                    <h4>Interna memorija</h4>
                    @foreach (var item in Model.Filters.InternaMemorija)
                    {
                        <div class="filter-item">
                            <input type="checkbox" id="memory_@item" name="InternaMemorija" value="@item" />
                            <label for="memory_@item">@item</label>
                        </div>
                    }
                </div>
            }

            @if (Model.Filters.RezolucijaEkrana != null)
            {
                <div class="filter-group">
                    <h4>Rezolucija ekrana</h4>
                    @foreach (var item in Model.Filters.RezolucijaEkrana)
                    {
                        <div class="filter-item">
                            <input type="checkbox" id="res_@item" name="RezolucijaEkrana" value="@item" />
                            <label for="res_@item">@item</label>
                        </div>
                    }
                </div>
            }

            @if (Model.Filters.RAMMemorija != null)
            {
                <div class="filter-group">
                    <h4>RAM memorija</h4>
                    @foreach (var item in Model.Filters.RAMMemorija)
                    {
                        <div class="filter-item">
                            <input type="checkbox" id="ram_@item" name="RAMMemorija" value="@item" />
                            <label for="ram_@item">@item</label>
                        </div>
                    }
                </div>
            }

            <div class="filter-group">
                <h4>Cena (RSD)</h4>
                <div class="filter-item" style="margin-bottom: 10px;">
                    <label for="minCena">Min cena</label>
                    <input type="number" id="minCena" name="MinCena" class="form-control" placeholder="npr. 30000" min="0" />
                </div>
                <div class="filter-item">
                    <label for="maxCena">Max cena</label>
                    <input type="number" id="maxCena" name="MaxCena" class="form-control" placeholder="npr. 120000" min="0" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Primeni filtere</button>
        </form>
    </aside>

    <div class="results-container" id="productsContainer">
        @Html.Partial("~/Views/Scrape/ProductsList.cshtml", Model.Products)
    </div>
</div>

<style>
    .page-layout {
        display: flex;
        gap: 30px;
        align-items: flex-start;
        padding: 20px;
    }

    .filters-sidebar {
        width: 250px;
        background: #f7f8fa;
        padding: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        position: sticky;
        top: 20px;
        height: fit-content;
    }

    .results-container {
        flex: 1;
    }

    .filter-group {
        margin-bottom: 20px;
    }

        .filter-group h4 {
            margin-bottom: 10px;
            font-size: 16px;
            font-weight: 600;
        }

    .filter-item {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

        .filter-item input[type="checkbox"] {
            margin-right: 8px;
            accent-color: #0078d4;
            width: 16px;
            height: 16px;
        }

        .filter-item label {
            font-size: 14px;
            cursor: pointer;
        }

    .btn-primary {
        background-color: #0078d4;
        border: none;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>

<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $('#filterForm').on('submit', function (e) {
        e.preventDefault();
        var data = $(this).serialize();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("ScrapeTablets", "Tablets")',
            data: data,
            success: function (result) {
                $('#productsContainer').html(result);
            },
            error: function (xhr, status, error) {
                console.error("Greška pri učitavanju proizvoda:", error);
            }
        });
    });
</script>
