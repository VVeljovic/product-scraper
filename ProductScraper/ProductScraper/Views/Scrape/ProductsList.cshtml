@using System.Text.Json
@model ScrapedResult

@if (Model != null)
{
    <div id="productsWrapper">
        @foreach (var product in Model.Products)
        {
            <div class="card-grid">
                <img src='@($"https://dummyimage.com/300x200/0078d4/ffffff&text={Uri.EscapeDataString(product.Title.Split(' ')[0])}")' alt="" />
                <div class="product-info">
                    <h5>@product.Title</h5>
                    <p class="price">@product.Price</p>
                    <a href="@product.SourceLink" class="btn btn-outline-primary">Detalji</a>
                </div>
            </div>
        }

        @if (Model.SitenameAndNexturlPairs.Any())
        {
            <form id="filterFormT" method="post" action="@Url.Action("scrape-products", "Scrape")" style="text-align:center; margin-top:15px;">
                <button id="scrapeMoreBtn" class="btn btn-primary" style="width:200px;">
                    Skrejpuj još
                </button>
            </form>
        }
    </div>
}
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script>
    $('#filterFormT').on('submit', function (e) {
        e.preventDefault();
        var data = @Html.Raw(Json.Serialize(Model));
        console.log(data);
        $.ajax({
            type: 'POST',
            url: '@Url.Action("scrape-products", "Scrape")',
            data: data,
            success: function (result) {
    $('#productsContainer').append(result);
                },
            error: function (xhr, status, error) {
                console.error("Greška pri učitavanju proizvoda:", error);
            }
        });
    });
</script>

                <style>
    #productsWrapper {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px; 
        margin-bottom: 20px;
    }

    .card-grid {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: center;
        border-radius: 8px;
    }

        .card-grid img {
            width: 100%;
            height: auto;
            object-fit: cover;
            margin-bottom: 10px;
        }

    .product-card {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .product-card img {
            width: 100%;
            height: 180px;
            object-fit: cover;
        }

    .product-info {
        padding: 12px 15px;
        display: flex;
        flex-direction: column;
        gap: 6px;
        flex-grow: 1;
    }

        .product-info h5 {
            font-size: 16px;
            font-weight: 600;
            margin: 0;
        }

        .product-info .price {
            font-size: 15px;
            font-weight: bold;
            color: #0078d4;
            margin: 0;
        }

    .btn-outline-primary {
        border: 1px solid #0078d4;
        background: transparent;
        color: #0078d4;
        font-size: 14px;
        border-radius: 5px;
        padding: 6px 10px;
        align-self: flex-start;
        transition: all 0.2s ease;
    }

        .btn-outline-primary:hover {
            background: #0078d4;
            color: #fff;
        }

    .btn-primary {
        background-color: #0078d4;
        border: none;
        margin-top: 10px;
    }

        .btn-primary:hover {
            background-color: #005fa3;
        }
</style>
