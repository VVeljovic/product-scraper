<h1 class="page-title">Scrape</h1>

<div class="scrape-container">
    <form id="scrapeForm" class="scrape-form">
        <label for="category" class="form-label">Odaberi kategoriju:</label>
        <select name="category" id="category" class="form-select">
            <option value="Laptops">Laptops</option>
            <option value="TVs">TVs</option>
            <option value="Phones">Phones</option>
            <option value="Tablets">Tablets</option>
            <option value="Desktops">Desktop computers</option>
        </select>

        <button type="submit" class="btn btn-primary scrape-btn">Pokreni Scraping</button>
    </form>

    <div id="resultContainer" class="result-container"></div>
</div>

<script>
    document.getElementById('scrapeForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        const form = e.target;
        const formData = new FormData(form);

        const response = await fetch('@Url.Action("Start", "Scrape")', {
            method: 'POST',
            body: formData
        });

        const html = await response.text();
        document.getElementById('resultContainer').innerHTML = html;
    });
</script>

