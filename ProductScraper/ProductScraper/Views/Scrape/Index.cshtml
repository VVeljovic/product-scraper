<div class="scrape-container">

    <div class="search-bar">
        <input type="text" id="searchInput" placeholder="Pretraži..." class="search-input">

        <input type="number" id="minPriceInput" placeholder="Min cena" class="price-input">
        <input type="number" id="maxPriceInput" placeholder="Max cena" class="price-input">

        <button id="searchBtn" class="search-btn">🔍</button>
    </div>

    <form id="scrapeForm" class="scrape-form">
        <label for="category" class="form-label">Odaberi kategoriju:</label>
        <select name="category" id="category" class="form-select">
            <option value="Laptops">Laptops</option>
            <option value="Phones">Phones</option>
            <option value="Tablets">Tablets</option>
            <option value="Desktops">Desktop computers</option>
        </select>

        <button type="submit" class="btn btn-primary scrape-btn">Pokreni Scraping</button>
    </form>

    <div id="resultContainer" class="result-container"></div>
</div>

<script>

    document.getElementById('scrapeForm').addEventListener('submit', (e) => {
        e.preventDefault();
        const category = document.getElementById('category').value;

        window.location.href = `/${category}`;
    });

     function handleSearch() {
        const query = document.getElementById('searchInput').value.trim();
        const minPrice = document.getElementById('minPriceInput').value;
        const maxPrice = document.getElementById('maxPriceInput').value;

        if (query === "")
            return;

        const url = `/Scrape/search-scraping?Query=${encodeURIComponent(query)}&MinPrice=${minPrice}&MaxPrice=${maxPrice}`;

        console.log("Pozivam endpoint:", url);

        window.location.href = url;
    }

    document.getElementById('searchBtn').addEventListener('click', handleSearch);

</script>

