@using ProductScraper.Models.Filters
@model PhonesFilters
<form method="post" asp-action="ApplyFilters" asp-controller="Scrape" id="filterForm">

    @if (Model.Brend != null)
    {
        <div class="filter-group">
            <h4>Proizvođač</h4>
            @foreach (var item in Model.Brend)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="Brend" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.DijagonalaEkrana != null)
    {
        <div class="filter-group">
            <h4>Dijagonala ekrana</h4>
            @foreach (var item in Model.DijagonalaEkrana)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="DijagonalaEkrana" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.InternaMemorija != null)
    {
        <div class="filter-group">
            <h4>Interna memorija</h4>
            @foreach (var item in Model.InternaMemorija)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="InternaMemorija" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.PrednjaKamera != null)
    {
        <div class="filter-group">
            <h4>Prednja kamera</h4>
            @foreach (var item in Model.PrednjaKamera)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="PrednjaKamera" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }
    @if (Model.ZadnjaKamera != null)
    {
        <div class="filter-group">
            <h4>Zadnja kamera</h4>
            @foreach (var item in Model.ZadnjaKamera)
            {
                <div class="filter-item">
                    <input type="checkbox" id="manufacturer_@item" name="ZadnjaKamera" value="@item" />
                    <label for="manufacturer_@item">@item</label>
                </div>
            }
        </div>
    }

    <button type="submit" class="btn btn-primary">Apply</button>
</form>

<style>
    .filters {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        max-width: 1000px;
    }

    .filter-group {
        flex: 1 1 250px;
        background: #f7f8fa;
        padding: 10px 15px;
        border: 1px solid #ddd;
        border-radius: 6px;
    }

        .filter-group h4 {
            margin-bottom: 10px;
            font-size: 16px;
            font-weight: bold;
        }

    .filter-item {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

        .filter-item input[type="checkbox"] {
            margin-right: 8px;
            accent-color: #0078d4;
            width: 16px;
            height: 16px;
        }

        .filter-item label {
            cursor: pointer;
            font-size: 14px;
        }
</style>
